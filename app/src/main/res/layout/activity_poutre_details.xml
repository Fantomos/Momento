<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".PoutreDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:height="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />

    <ImageView
        android:id="@+id/imageType"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_weight="1"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageType"
        app:layout_constraintVertical_weight="3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:max="10"
                android:progress="3"
                android:scaleY="2.5"
                app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/abscisse" />

            <TextView
                android:id="@+id/abscisse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="X = 10 m"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/seekBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:columnCount="2"
                app:layout_constraintBottom_toTopOf="@+id/abscisse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rowCount="7"
                app:useDefaultMargins="true">

                <EditText
                    android:id="@+id/longueurEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="50 mètres"
                    android:textSize="20sp"
                    android:visibility="invisible"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1" />

                <EditText
                    android:id="@+id/forceEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="50 kN"
                    android:textSize="20sp"
                    android:visibility="invisible"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="2"
                    tools:layout_editor_absoluteX="-15dp"
                    tools:layout_editor_absoluteY="369dp" />

                <TextView
                    android:id="@+id/labelType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Type :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@null"
                    android:text="Deux appuis avec charge ponctuelle au centre"
                    android:textSize="20sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="top"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/labelLongueur"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Longueur :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/longueur"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="50 mètres"
                    android:textSize="20sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="top"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/force"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="50 kN"
                    android:textSize="20sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="top"
                    app:layout_row="2"
                    tools:layout_editor_absoluteX="-15dp"
                    tools:layout_editor_absoluteY="369dp" />


                <TextView
                    android:id="@+id/labelForce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Force appliquée :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:autoSizeTextType="none"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/labelForceReaction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Force de réaction extérieur : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="3" />

                <TextView
                    android:id="@+id/forceReaction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="50 kN"
                    android:textSize="20sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="top"
                    app:layout_row="3" />

                <TextView
                    android:id="@+id/labelMomentReaction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Moment de réaction extérieur :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="4" />

                <TextView
                    android:id="@+id/momentReaction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="50 kN.m"
                    android:textSize="20sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="top"
                    app:layout_row="4" />

                <TextView
                    android:id="@+id/labelTranchantMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Effort tranchant maximal :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="5" />

                <TextView
                    android:id="@+id/tranchantMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="50 kN"
                    android:textSize="20sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="top"
                    app:layout_row="5" />

                <TextView
                    android:id="@+id/labelFlechissantMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Moment fléchissant maximal : "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="6" />

                <TextView
                    android:id="@+id/flechissantMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="top"
                    android:text="50 kN.m"
                    android:textSize="20sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="6" />

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar"
                app:useDefaultMargins="true">

                <TextView
                    android:id="@+id/labelTranchant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Effort tranchant :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/tranchant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="8dp"
                    android:text="50 kN"
                    android:textSize="20sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="top"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/labelFlechissant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Moment flechissant :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/flechissant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="8dp"
                    android:text="50 kN.m"
                    android:textSize="20sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="top"
                    app:layout_row="1" />
            </androidx.gridlayout.widget.GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        app:layout_anchorGravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="@+id/imageType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageType"
        app:srcCompat="@drawable/delete" />

    <TextView
        android:id="@+id/Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="#105"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/imageType"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Babar"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageType"
        app:layout_constraintStart_toEndOf="@+id/Id" />

</androidx.constraintlayout.widget.ConstraintLayout>